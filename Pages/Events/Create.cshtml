@model EventsApp.Pages.Events.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Event.Title" class="control-label"></label>
                <input asp-for="Event.Title" class="form-control" />
                <span asp-validation-for="Event.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Description" class="control-label"></label>
                <input asp-for="Event.Description" class="form-control" />
                <span asp-validation-for="Event.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Location" class="control-label"></label>
                <input asp-for="Event.Location" class="form-control" />
                <span asp-validation-for="Event.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.ArabicTitle" class="control-label"></label>
                <input asp-for="Event.ArabicTitle" class="form-control" />
                <span asp-validation-for="Event.ArabicTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.ArabicDescription" class="control-label"></label>
                <input asp-for="Event.ArabicDescription" class="form-control" />
                <span asp-validation-for="Event.ArabicDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.ArabicLocation" class="control-label"></label>
                <input asp-for="Event.ArabicLocation" class="form-control" />
                <span asp-validation-for="Event.ArabicLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.CoordLongitude" class="control-label"></label>
                <input asp-for="Event.CoordLongitude" class="form-control" />
                <span asp-validation-for="Event.CoordLongitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.CoordLatitude" class="control-label"></label>
                <input asp-for="Event.CoordLatitude" class="form-control" />
                <span asp-validation-for="Event.CoordLatitude" class="text-danger"></span>
            </div>



            <div class="form-group">
                @*<label asp-for="Event.Image" class="control-label"></label>*@
                @*<input asp-for="Event.ImagePath" class="custom-file" />*@
                <div class="mb-3">
                    <label for="formFile" class="form-label">Image</label>
                    <input class="form-control" asp-for="Event.Image" id="formFile">
                </div>

                <span asp-validation-for="Event.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.StartDate" class="control-label"></label>
                <input asp-for="Event.StartDate" class="form-control" />
                <span asp-validation-for="Event.StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">

                <label>Choose Rleated Events : </label>
                <select asp-for="relatedEventsSelect" asp-items="Model.relatedEvents" multiple size="10" id="relatedEventsSelect"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>


@page
@model EventsApp.Pages.Events.UserDetailsArabicModel
@{
    ViewData["Title"] = "تفاصيل";

}


<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            الاسم
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.ArabicTitle)
        </dd>
        <dt class="col-sm-2">
            الوصف
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.ArabicDescription)
        </dd>
        <dt class="col-sm-2">
            الموقع
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.ArabicLocation)
        </dd>

        <dt class="col-sm-2">
            خط الطول
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.CoordLongitude)
        </dd>
        <dt class="col-sm-2">
            خط العرض
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.CoordLatitude)
        </dd>
        <dt class="col-sm-2">
            التاريخ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.StartDate)
        </dd>

        <dt class="col-sm-2">
            الأحداث المرتبطة :
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var r in Model.relatedEventsList)
                {
                    <li>
                        @(r)
                    </li>
                }
            </ul>
            @*@Html.DisplayFor(model => model.relatedEventsList)*@
        </dd>
        <dt class="col-sm-2">
            الصورة
        </dt>
        <dd class="col-sm-10">
            <img src="/@Html.DisplayFor(model => model.Event.ImagePath)" class="card-img" />
        </dd>
        @*<dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.ImagePath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.ImagePath)
        </dd>*@



    </dl>
</div>
<div>
    <a asp-page="/Events/UserEventsArabic">رجوع الى  القائمة</a>
</div>

